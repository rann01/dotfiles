# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	interval = 1
	colors = true
	color_good = '#20B684'
	color_degraded = '#FFDE03'
	color_bad = '#FF5252'
}

#order += "ipv6"
order += "volume master"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
#order += "load"
order += "cpu_usage all"
order += "cpu_temperature 0"
order += "tztime local"

wireless _first_ {
        format_up = "W: %ip on %essid (%quality)"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery 0 {
	integer_battery_capacity = true
	last_full_capacity = true
	hide_seconds = true
        format = "%status %percentage %remaining"
	format_down = "No battery"
	low_threshold = 15
	threshold_type = percentage
	status_chr = "CHR:"
	status_bat = "BAT:"
	status_unk = "UNK:"
	status_full = "FULL:"
}

tztime local {
	format = "%a %m/%d/%y %I:%M:%S%p"
}

load {
        format = "%1min"
}

cpu_usage {
	format = "%usage"
	max_threshold = 85		
}

cpu_temperature 0 {
	format = "%degrees°C"
	max_threshold = 85
}

disk "/" {
        format = "%used / %total (%percentage_used)"
	low_threshold = 10
}

volume master {
	format		= "VOL: %volume"
	format_muted	= "VOL: MUTE"
	device		= "default"
	mixer		= "Master"
	mixer_idx	= 0
}
