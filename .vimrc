syntax on		        "enable syntax highlighting
colorscheme koehler

set relativenumber 	"relative line numbers 
set ruler		        "always show ruler
set ignorecase		  "ignore case for searches
set hlsearch		    "highlight search resultss
set incsearch
set showmatch		    "show matching brackets
set expandtab		    "make tabs space characters
set shiftwidth=4	  "1 tab = 4 spaces
set tabstop=4

set ai			"auto indent
set si			"smart indent
set wrap		"wrap lines that extend past terminal window


